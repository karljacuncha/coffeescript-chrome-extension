*
  margin 0
  padding 0
  
html, body, #main  
  width 100%
  height 100%  
  display block
  overflow hidden
  font-size 1em
  font-weight normal
  font-family: Candara, Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif;

body
  color white
  background black
  position relative
  #main
    margin 0 auto
    text-align center    
    img
      display block
      margin 0 auto
      width 100%
      height auto    
  #informational_text_area
    position absolute
    z-index 10
    top 0
    right 0
    max-width 50%
    button, .info 
      float right
      color #f2eeb7
      border 1px solid #f2eeb7
      background #1f0e00
      padding 1em
      margin 1em      
    #explanatory_text
      display none
      a
        color white
      &:visited
        color white
      footer
        font-size 0.8em
        margin-top 1em
